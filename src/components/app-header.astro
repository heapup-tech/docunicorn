---
import config from '@config'
import { Image } from 'astro:assets'
import Logo from '@assets/images/logo.png'
---

<header class='z-99 sticky top-0 backdrop-blur-sm'>
  <div class='flex h-16 items-center border-b p-5'>
    <a
      href='/'
      class='flex items-center'
    >
      <Image
        src={Logo}
        alt='Logo'
        class='mr-1 h-5 w-5'
      />
      <h1 class='text-xl font-semibold'>{config.site.name}</h1>
    </a>
  </div>
</header>
