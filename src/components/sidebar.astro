---
import SidebarGroup from '@components/sidebar-group.astro'

export type SidebarItem = {
  label: string
  id: string
  slug: string
  childs: SidebarItem[]
}

interface Props {
  sidebars: SidebarItem[]
}

const { sidebars } = Astro.props
---

<aside class='h-full w-64 border-r px-3 pt-4'>
  {
    sidebars.map((sidebar) => {
      return <SidebarGroup sidebar={sidebar} />
    })
  }
</aside>
